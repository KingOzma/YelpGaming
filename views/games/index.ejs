<% include ../partials/header %>

	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpGaming!</h1>
			<p>View Gaming-related Photos</p>
			<p>
			<a class="btn btn-primary btn-lg" href = "/games/new">Add New Game</a>
			</p>
		</div>
	</header>
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% games.forEach(function(game){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= game.image %>">
					<div class="caption">
						<h4><%= game.name %></h4>
					</div>
					<p>
						<a href="/games/<%= game._id %>" class= "btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>

<% include ../partials/footer %>